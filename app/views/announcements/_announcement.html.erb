<div id="<%= dom_id announcement %>" class="overflow-hidden bg-white shadow sm:rounded-lg p-5 my-10">
  <div class="relative flex items-start space-x-3">
    <div class="relative w-11/12">
      <div class="flex items-center gap-x-4 text-xs">
        <%= announcement.published_at.strftime('%b %d, %Y') %>
        <span class="relative rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"> <%= Announcement.human_enum_name(:status, announcement.status) %></span>
      </div>
      <div class="group relative max-w-xl">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-indigo-500 group-hover:text-gray-600"><%= announcement.title %></h3>
        <p class="mt-5 text-sm leading-6 text-gray-600"><%= announcement.content %></p>
      </div>
      <div class="mt-6 flex border-t border-gray-900/5 pt-6">
        <div class="relative flex items-center gap-x-4">
          <%= image_tag announcement.user.avatar_url_or_default, class: "rounded-full h-10 w-10 align-middle" %>
          <p class="font-medium text-gray-900"><%= announcement.user.full_name %></p>
        </div>
      </div>
    </div>

    <div class="min-w-0 flex-1">
      <div class="inline-block text-sm px-4 py-2 leading-none rounded no-underline text-gray hover:text-gray-900 hover:bg-white mt-4 lg:mt-0">
        <div class="relative" data-controller="dropdown">
          <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
            <span class="appearance-none flex items-center inline-block text-gray-700">
              <span class="sr-only">Open options</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M3 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM8.5 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM15.5 8.5a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
              </svg>
            </span>
          </div>
          <div data-dropdown-target="menu" class="absolute right-0 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
              <%= link_to edit_announcement_path(announcement), data: { turbo_frame: "right_content", action: "right#show" }, class: "text-gray-700 group flex items-center px-4 py-2 text-sm hover:text-indigo-500", role: "menuitem", tabindex: "-1", id: "menu-item-0" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-indigo-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                  <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                </svg>
                <%= t("buttons.edit") %>
              <% end %>

              <%= button_to "/announcements/#{announcement.id}", method: :delete, data: {turbo_confirm: t("popups.message_delete"), action: "click->dropdown#toggle"}, class: "text-gray-700 group flex items-center px-4 py-2 text-sm hover:text-red-500", role: "menuitem", tabindex: "-1", id: "menu-item-1" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-red-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                </svg>
                <%= t("buttons.delete") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
