<div class="border-b border-gray-200 pb-5 sm:pb-0 mt-10">
  <div class="mt-3 sm:mt-4">
    <div class="hidden sm:block">
      <nav class="-mb-px flex space-x-8 user-submenu">
        <% if user %>
          <%= link_to "My Requests", user_user_requests_path(user), data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to "My Time Off Requests", user_time_requests_path(user), data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to "My Mission Orders", user_mission_orders_path(user), data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to "My Expenses", user_expenses_path(user), data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
        <% else %>
          <%= link_to t("views.layouts.main.requests"), user_requests_path, data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to t("views.time_requests.title_time_request"), time_requests_path, data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to t("views.mission_orders.title_mission_orders"), mission_orders_path, data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
          <%= link_to t("views.expenses.title_expenses"), expenses_path, data: { turbo_frame: 'tabbed-content', turbo_action: 'advance'} %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
