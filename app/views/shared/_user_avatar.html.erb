<% if current_user&.avatar.attached? %>

  <%= image_tag current_user.avatar, class: class_avatar, alt: "user avatar" %>

<% elsif current_user&.avatar_url.present? %>

  <%= image_tag current_user.avatar_url, class: class_avatar, alt: "user avatar by provider" %>

<% else %>

  <%= image_tag "/assets/users/user.png", class: class_avatar, alt: "default user avatar" %>
  
<% end %>
