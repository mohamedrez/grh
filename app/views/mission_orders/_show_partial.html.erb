<div id="<%= dom_id mission_order %>">
  <div class="py-6">
    <div class="flex items-center justify-between gap-x-6 rounded-lg">
      <div>
      <p class="text-2xl font-extrabold leading-none tracking-tight text-gray-900"><%= mission_order.title %></p>
      </div>
      <div class="flex items-center gap-x-5">
        <%= render partial: "aasm_states", locals: {mission_order: mission_order, user: user} %>
      </div>
    </div>
  </div>

  <div class="mt-8 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
    <%= render partial: "left_side", locals: {mission_order: mission_order, user_request: user_request, aasm_logs: aasm_logs} %>

    <div class="w-full overflow-hidden bg-white shadow sm:rounded-lg">
      <%= render partial: "mission_order_attributes", locals: {mission_order: mission_order} %>
    </div>
  </div>
</div>