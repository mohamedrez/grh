<%= turbo_frame_tag "modal-content", class: "w-full" do %>
  <%= form_with(model: @mission_order, url: user_make_payment_mission_order_path(@user, @mission_order), method: :patch, class: "mt-5 bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
    <div class="sm:p-8">
    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-full sm:col-start-1">
        <%= form.label :payment_type %>
        <div class="mt-2">
          <%= form.select :payment_type, options_for_select(MissionOrder.payment_types.map {|key, value| [key.humanize, key]}) %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <a href="#" data-action="modal#hide" class="text-sm font-semibold leading-6 text-gray-900">
      <%= t("buttons.cancel") %>
    </a>

    <% if @mission_order.site? && @mission_order.may_pay_mission_order_by_accountant? %>
      <%= form.hidden_field :aasm_state, value: "paid_by_accountant" %>
      <%= form.submit t("views.mission_orders.pay_by_accountant") %>
    <% end %>

    <% if @mission_order.project? && @mission_order.may_pay_mission_order_by_holding_treasury? %>
      <%= form.hidden_field :aasm_state, value: "paid_by_holding_treasury" %>
      <%= form.submit t("views.mission_orders.pay_by_holding_treasury") %>
    <% end %>
  </div>
  <% end %>
<% end %>
