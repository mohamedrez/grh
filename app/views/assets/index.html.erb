<div>
  <div class="bg-white px-4 py-2 sm:px-6">
    <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
      <div class="ml-4 mt-2">
        <h1 class="text-xl tracking-tight leading-5 font-extrabold text-gray-900 break-words sm:text-2xl sm:leading-8 md:text-4xl">Assets</h1>
      </div>
      <div class="ml-4 mt-2 flex-shrink-0">
        <%= link_to "Add Asset", new_user_asset_path(@user.id), class: "relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>
  </div>
  <hr class="border-t border-gray-400 my-10">
</div>
<ul role="list" class="grid grid-cols-1 gap-x-6 gap-y-8 lg:grid-cols-3 xl:gap-x-8">
  <% @assets.each do |asset| %>
    <turbo-frame id="asset<%= asset.id %>">
      <li class="overflow-hidden rounded-xl border border-gray-200">
        <div class="flex items-center gap-x-4 border-b border-gray-900/5 bg-gray-50 p-6">
          <img src="https://tailwindui.com/img/logos/48x48/tuple.svg" alt="Tuple" class="h-12 w-12 flex-none rounded-lg bg-white object-cover ring-1 ring-gray-900/10">
          <div class="text-sm font-medium leading-6 text-gray-900"><%= asset.serial %></div>
          <div class="relative ml-auto">
            <%= link_to "Edit", edit_user_asset_path(user_id: asset.user_id, id: asset.id), class: "hidden rounded-md bg-white px-5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block" %>
          </div>
        </div>
        <dl class="-my-3 divide-y divide-gray-100 px-6 py-4 text-sm leading-6">
          <div class="flex justify-between gap-x-4 py-3">
            <dt class="text-gray-500">Category</dt>
            <dd class="font-medium text-gray-900"><%= asset.category&.humanize %></dd>
          </div>
          <div class="flex justify-between gap-x-4 py-3">
            <dt class="text-gray-500">Date assigned</dt>
            <dd class="font-medium text-gray-900"><%= asset.date_assigned %></dd>
          </div>
          <div class="flex justify-between gap-x-4 py-3">
            <dt class="text-gray-500">Date returned</dt>
            <dd class="font-medium text-gray-900"><%= asset.date_returned %></dd>
          </div>
          <div class="flex justify-between gap-x-4 py-3">
            <dt class="text-gray-500">Description</dt>
            <div class="flex-auto rounded-md p-3 ring-1 ring-inset ring-gray-200 ml-10">
              <p class="text-sm leading-6 text-gray-500"><%= asset.description %></p>
            </div>
          </div>
        </dl>
      </li>
    </turbo-frame>
  <% end %>
</ul>
