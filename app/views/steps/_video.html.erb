<div class="relative h-0 overflow-hidden max-w-full w-full" style="padding-bottom: 56.25%" >
    <iframe
        src="http://www.youtube.com/embed/<%= @my_asset %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>"
        frameborder="0"
        allowfullscreen
        class="absolute top-0 left-0 w-full h-full"
    ></iframe>
</div>
<div class="mt-10 mx-10">
  <div class="flex flex-wrap lg:flex-nowrap">
    <div class="flex flex-wrap md:flex-nowrap flex-grow order-3 w-full lg:order-none mt-4 lg:mt-auto">
      <div class="flex-grow">
        <h1 class="text-xl tracking-tight leading-5 font-extrabold text-gray-900 break-words sm:text-2xl sm:leading-8 md:text-3xl"><%= @step.name %></h1>
        <div class="text-xl mt-4 text-gray-700">with <span class="text-2xl font-semibold text-blue-500 dark:text-white"><%= @step.stepable.teacher %></span>
        </div>
      </div>
      <div class="flex-shrink-0 mt-4 md:mt-0 md:ml-4">
        <% if can? :update, @user_progress %>
          <% unless @up_status == "completed"%>
            <div class="button button--secondary font-medium mt-3 bg-purple-500">
              <%= button_to 'Mark complete', user_progress_path(course_id: @course.id, step_id: @step.id), method: :patch %>
            </div>
          <% else %>
            <div class="button button--secondary font-medium mt-3 bg-green-500">
              <%= button_to 'Lesson Completed', user_progress_path(course_id: @course.id, step_id: @step.id), method: :patch %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <% if @index_plus_one < @course.steps_count %>
      <a class="flex p-4 bg-gray-200 hover:bg-gray-300 rounded-lg ml-4 items-center flex-shrink-0 justify-center w-10 h-14 lg:h-auto flex-1 lg:flex-none" href="<%= url_for course_step_url(@course, @step.next_step)%>">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </a>
    <% end %>
  </div>
</div>
