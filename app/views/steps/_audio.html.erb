<div class="grid place-items-center">
    <div class="bg-gray-900 dark:bg-stone-400 shadow-lg rounded p-4 lg:w-1/3">
        <div class="group relative">
            <%= image_tag "steps/img#{rand(1..3)}.png", class: "w-full md:w-75 block rounded" %>
        </div>
        <div class="mt-5 grid place-items-center">
            <%= audio_tag url_for(Lecture.find(step.stepable_id).audio_file), controls: true %>
            <div class="p-5">
                <h2 class="title-font sm:text-2xl text-xl font-medium text-gray-200 dark:text-gray-800 mb-3"><%= step.name %></h2>
            </div>
        </div>
    </div>
</div>