<%= turbo_frame_tag time_off_request do %>
  <div class="table min-w-full">
    <div><%= time_off_request.category&.humanize %></div>
    <div><%= time_off_request.start_date %></div>
    <div><%= time_off_request.end_date %></div>
    <div><%= time_off_request.user_request.state&.humanize %></div>
    <div>
      <%= User.find(time_off_request.user_request.managed_by_id).full_name unless time_off_request.user_request.pending? %>
    </div>
    <div>
      <% if action_name != "show" %>
        <%= link_to user_time_off_request_path(@user, time_off_request), data: { turbo_frame: "_top" } do %>
          <svg class="mr-5 inline-block w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        <% end %>
        <%= link_to edit_user_time_off_request_path(@user, time_off_request), data: { turbo_frame: "_top" } do %>
          <svg class="inline-block w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        <% end %>
        <%= button_to "/users/#{@user.id}/time_off_requests/#{time_off_request.id}", method: :delete, form_class: "inline-block ml-4", data: { turbo_confirm: "Are you sure you wanna delete this?" } do %>
          <svg class="inline-block w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
