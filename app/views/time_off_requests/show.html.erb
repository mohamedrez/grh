

<div class="flex items-center justify-between gap-x-6 bg-indigo-600 px-6 py-5 sm:pr-3.5 lg:pl-8 rounded-lg">
  <p class="text-lg font-medium leading-6 text-white">Time Off Request</p>
  <div class="flex items-center gap-x-5 mr-5">
    <% if @user_request.approved? %>
      <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-0.5 text-sm font-medium text-green-800">
        <svg class="mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
          <circle cx="4" cy="4" r="3" />
        </svg>
        Approved
      </span>
    <% elsif @user_request.rejected? %>
      <span class="inline-flex items-center rounded-full bg-red-100 px-3 py-0.5 text-sm font-medium text-green-800">
        <svg class="mr-1.5 h-2 w-2 text-red-400" fill="currentColor" viewBox="0 0 8 8">
          <circle cx="4" cy="4" r="3" />
        </svg>
        Rejected
      </span>
    <% else %>
      <%= button_to "Approve", user_user_request_update_path(user_id: @user.id, id: @user_request.id, managed_by_id: current_user.id, state: :approved), method: :patch, class: "rounded-md bg-gray-900 px-5 py-2 text-base font-medium text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
      <%= button_to "Deny", user_user_request_update_path(user_id: @user.id, id: @user_request.id, managed_by_id: current_user.id, state: :rejected), method: :patch, class: "rounded-md bg-white px-5 py-2 ttext-base font-medium text-gray-900 shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900" %>
    <% end %>
  </div>
</div>

