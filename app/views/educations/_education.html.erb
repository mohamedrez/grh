<li id="<%= dom_id education %>">
  <div class="relative flex items-start space-x-3">
    <div class="relative pb-10 w-11/12">
      <div class="relative flex space-x-3">
        <div>
          <span class="h-20 w-20 rounded-full bg-indigo-50 flex items-center justify-center ring-8 ring-white">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024" class="h-12 w-12 text-white">
              <path d="m512.868 650.199-440-240.3 440-240.4 440 240.3-440 240.4zm-377.4-240.3 377.4 206.1 377.4-206.2-377.4-206.1-377.4 206.2z" fill="#000000" class="color000 svgShape"></path>
              <path d="m511.868 855.299-299-155v-247.1l299 162.9 299-162.9v247.2l-299 154.9zm-269-173.2 269 139.4 269-139.4v-178.4l-269 146.5-269-146.5v178.4zM906.868 410.499h30v199h-30z" fill="#000000" class="color000 svgShape"></path>
            </svg>
          </span>
        </div>
        <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
          <div>
            <p class="font-medium text-lg text-gray-900"><%= education.school %>
              <% if education.still_on_this_course %>
                <span class="rounded-full px-2 text-sm font-medium bg-indigo-100 text-indigo-800 ml-2"><%= t("attributes.education.still_on") %></span>
              <% end %>
            </p>
            <p class="font-normal text-base text-gray-900"><%= Education.human_enum_name(:education_level, education.education_level) %> . <%= Education.human_enum_name(:study_field, education.study_field) %></p>
            <p class="font-normal text-base text-gray-500"><%= education.start_date %> - <%= education.end_date %></p>
            <p class="font-normal text-base text-gray-500"><%= education.city.humanize %>, <%= Address.human_enum_name(:country, education.country) %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="min-w-0 flex-1">
      <div class="inline-block text-sm px-4 py-2 leading-none rounded no-underline text-gray hover:text-gray-900 hover:bg-white mt-4 lg:mt-0">
        <div class="relative" data-controller="dropdown">
          <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
            <span class="appearance-none flex items-center inline-block text-gray-700">
              <span class="sr-only">Open options</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M3 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM8.5 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM15.5 8.5a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
              </svg>
            </span>
          </div>
          <div data-dropdown-target="menu" class="absolute right-0 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
              <%= link_to edit_user_education_path(user, education), data: { turbo_frame: "right_content", action: "right#show" }, class: "text-gray-700 group flex items-center px-4 py-2 text-sm hover:text-indigo-500", role: "menuitem", tabindex: "-1", id: "menu-item-0" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-indigo-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                  <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                </svg>
                <%= t("buttons.edit") %>
              <% end %>

              <%= button_to user_education_path(user, education), method: :delete, data: {turbo_confirm: t("popups.message_delete"), action: "click->dropdown#toggle"}, class: "text-gray-700 group flex items-center px-4 py-2 text-sm hover:text-red-500", role: "menuitem", tabindex: "-1", id: "menu-item-1" do %>
                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-red-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                </svg>
                <%= t("buttons.delete") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
