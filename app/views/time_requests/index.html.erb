<%= render partial: 'users/submenu', locals: {user: @user} %>
<%= turbo_frame_tag "tabbed-content" do %>
  <div class="px-4 sm:px-6 lg:px-8 mt-10">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-base font-semibold leading-6 text-indigo-500"><%= t("views.time_requests.title_time_request") %></h1>
        <p class="mt-2 text-sm text-gray-700"><%= t("views.time_requests.time_requests_list") %></p>
      </div>
      <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <%= link_to new_user_time_request_path(@user.id), class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", data: { turbo_frame: "_top" } do %>
          <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <%= t("buttons.add") %>
        <% end %>
      </div>
    </div>
    <div class="min-w-full my-8">
      <div class="table-5 font-medium text-sm min-w-full rounded-tr-lg rounded-tl-lg">
        <div><%= t("attributes.time_request.category") %></div>
        <div><%= t("attributes.shared.start_date") %></div>
        <div><%= t("attributes.shared.end_date") %></div>
        <div><%= t("attributes.user_request.state") %></div>
        <div><%= t("attributes.user_request.managed_by") %></div>
        <div></div>
      </div>
      <div id="time_requests">
        <%= render @time_requests %>
      </div>
    </div>
  </div>
<% end %>
