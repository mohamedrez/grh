<%= turbo_frame_tag time_request do %>
  <div class="table-5 min-w-full">
    <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= time_request.category&.humanize %></div>
    <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= time_request.start_date %></div>
    <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= time_request.end_date %></div>
    <div class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= time_request.user_request.state&.humanize %></div>
    <div>
      <%= User.find(time_request.user_request.managed_by_id).full_name unless time_request.user_request.pending? %>
    </div>
    <% if action_name != "show" %>
      <div class="flex justify-center mt-4">
        <%= link_to user_time_request_path(@user, time_request), data: { turbo_frame: "right_content", action: "right#show" } do %>
          <svg class="inline-block w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        <% end %>
        <% if time_request.user_request.pending? %>
          <%= link_to edit_user_time_request_path(@user, time_request), data: {turbo_frame: "right-content",  turbo_frame: "right_content", action: "right#show"} do %>
            <svg class="inline-block ml-4 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
            </svg>
          <% end %>
        <% end %>
        <%= button_to "/users/#{@user.id}/time_requests/#{time_request.id}", method: :delete, form_class: "inline-block ml-4", data: { turbo_confirm: "Are you sure you wanna delete this?" } do %>
          <svg class="inline-block w-6 h-6 text-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
