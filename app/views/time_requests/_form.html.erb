<%= form_with( model: [user, time_request], class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
 <% if time_request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(time_request.errors.count, "error") %> <%= t("errors.prohibited") %></h2>
      <ul>
        <% time_request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="sm:p-8">
    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-3 sm:col-start-1">
        <%= form.label :start_date, t("attributes.shared.start_date") %>
        <div class="mt-2">
          <%= form.date_field :start_date, class: "w-full" %>
        </div>
      </div>
      <div class="sm:col-span-3">
        <%= form.label :end_date, t("attributes.shared.end_date") %>
        <div class="mt-2">
          <%= form.date_field :end_date, class: "w-full" %>
        </div>
      </div>
      <div class="sm:col-span-full sm:col-start-1">
        <%= form.label :category, t("attributes.time_request.category") %>
        <div class="mt-2">
          <%= form.select :category, options_for_select(TimeRequest.categories.map {|key, value| [key.humanize, key]}, @time_request.category) %>
        </div>
      </div>
    </div>
    <div class="mt-8">
      <%= form.label :content, t("attributes.time_request.content") %>
      <%= form.rich_text_area :content, class: "block h-40 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <%= form.hidden_field :user_id, value: @user_id %>
    <%= link_to t("buttons.cancel"), user_time_requests_path(user_id: user.id), class: "text-sm font-semibold leading-6 text-gray-900", data: {turbo_frame: "_top"} %>
    <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", data: { turbo_frame: "_top" } %>
  </div>
<% end %>
