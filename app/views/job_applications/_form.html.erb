<%= form_with(model: job_application, class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2 my-5") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-full">
        <%= form.label :first_name, t("attributes.job_application.first_name"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :first_name, class: "w-full" %>
          <%= inline_error_for(:first_name, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :last_name, t("attributes.job_application.last_name"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :last_name, class: "w-full" %>
          <%= inline_error_for(:last_name, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :job_id, t("attributes.job_application.job"), class: "block" %>
        <div class="mt-2">
          <%= form.select :job_id, options_for_select(Job.all.map {|job| [job.title, job.id]}, @job&.id), prompt: true %>
          <%= inline_error_for(:job_id, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :email, t("attributes.job_application.email"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :email, class: "w-full" %>
          <%= inline_error_for(:email, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :phone, t("attributes.job_application.phone"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :phone, class: "w-full" %>
          <%= inline_error_for(:phone, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :source, t("attributes.job_application.source"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :source, class: "w-full" %>
          <%= inline_error_for(:source, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :link, t("attributes.job_application.link"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :link, class: "w-full" %>
          <%= inline_error_for(:link, job_application).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :note, t("attributes.job_application.note"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :note, class: "w-full" %>
          <%= inline_error_for(:note, job_application).html_safe %>
        </div>
      </div>

      <div>
        <%= form.label :resume %>
        <%= form.file_field :resume, accept: 'image/*, .pdf' %>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <%= link_to t("buttons.cancel"), job_applications_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
  