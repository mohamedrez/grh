<%= form_with(model: [user, emergency_contact], class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2 my-5") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-full">
        <%= form.label :name, t("attributes.shared.name"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :name, class: "w-full" %>
          <%= inline_error_for(:name, emergency_contact).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :email, t("attributes.emergency_contact.email"), class: "block" %>
        <div class="mt-2">
          <%= form.email_field :email, class: "w-full" %>
          <%= inline_error_for(:email, emergency_contact).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :relationship, t("attributes.emergency_contact.relationship"), class: "block" %>
        <div class="mt-2">
          <%= form.select :relationship, EmergencyContact.relationships.keys.collect { |relationship| [EmergencyContact.human_enum_name(:relationship, relationship), relationship] } %>
          <%= inline_error_for(:relationship, emergency_contact).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :phone, t("attributes.emergency_contact.phone"), class: "block" %>
        <div class="mt-2">
          <%= form.telephone_field :phone, class: "w-full" %>
          <%= inline_error_for(:phone, emergency_contact).html_safe %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <button data-action="click->right#hide" type="button" class= "text-sm font-semibold leading-6 text-gray-900">
      <%= t("buttons.cancel") %>
    </button>
    <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
