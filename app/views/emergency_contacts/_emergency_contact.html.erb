<%= turbo_frame_tag emergency_contact do %>
  <div class="table min-w-full">
    <div><%= emergency_contact.name %></div>
    <div><%= emergency_contact.email %></div>
    <div><%= emergency_contact.relationship %></div>
    <div><%= emergency_contact.phone %></div>
    <div>
      <% if action_name != "show" %>
        <%= link_to edit_user_emergency_contact_path(emergency_contact.user, emergency_contact) do %>
          <svg class="inline-block w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
        <% end %>
        <%= button_to user_emergency_contact_path(emergency_contact.user, emergency_contact), method: :delete, form_class: "inline-block ml-4", data: { turbo_confirm: "Are you sure you wanna delete this?" } do %>
          <svg class="inline-block w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
