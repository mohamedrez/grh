<tr id="job_<%= job.id %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3"><%= job.title %></td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-sky-100 px-2 text-xs font-semibold leading-5 text-sky-800"><%= job.type %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.location %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.remote %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.overview %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.min_salary %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.max_salary %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.unit %></span>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800"><%= job.status %></span>
  </td>
</tr>
