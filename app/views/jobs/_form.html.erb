<section>
  <%= form_with(model: @job) do |form| %>
    <div class="space-y-12">
      <div class="border-b border-gray-900/10 pb-12">
        <p class="mt-1 text-sm leading-6 text-gray-600"><%= t("views.jobs.add_details") %></p>
        <div class="grid max-w-5xl grid-cols-1 gap-x-3 gap-y-3 sm:grid-cols-6 md:col-span-2">
          <div class="sm:col-span-3">
            <%= form.label :title, t("attributes.job.title") %>
            <div class="mt-2">
              <%= form.text_field :title, class: "w-full" %>
            </div>
          </div>
          <div class="sm:col-span-1">
            <%= form.label :job_type, t("attributes.job.job_type") %>
            <div class="mt-2 sm:max-w-fit">
              <%= form.select :job_type, options_for_select(Job.job_types.map {|key, value| [key.humanize, key]}, @job.job_type) %>
            </div>
          </div>
          <div class="sm:col-span-3 sm:col-start-1">
            <%= form.label :location, t("attributes.job.location") %>
            <div class="mt-2">
              <%= form.text_field :location, class: "w-full" %>
            </div>
          </div>
          <div class="sm:col-span-2 w-sm:max-w-fit">
            <%= form.label :remote, t("attributes.job.remote") %>
            <div class="mt-2">
              <%= form.check_box :remote, {}, true, false %>
            </div>
          </div>
          <div class="sm:col-span-1 sm:col-start-1">
            <%= form.label :min_salary, t("attributes.job.min_salary") %>
            <div class="mt-2">
              <%= form.number_field :min_salary, step: :any, class: "w-xs" %>
            </div>
          </div>
          <div class="sm:col-span-2 sm:col-start-1">
            <%= form.label :max_salary, t("attributes.job.max_salary") %>
            <div class="mt-2">
              <%= form.number_field :max_salary, step: :any, class: "w-xs" %>
            </div>
          </div>
          <div class="sm:col-span-1 sm:col-start-1">
            <%= form.label :unit, t("attributes.job.unit") %>
            <div class="mt-2 sm:max-w-fit">
              <%= form.select :unit, options_for_select(Job.units.map {|key, value| [key.humanize, key]}, @job.unit) %>
            </div>
          </div>
          <div class="sm:col-span-3 sm:col-start-1">
            <%= form.label :overview, t("attributes.job.overview") %>
            <div class="mt-2">
              <%= form.text_field :overview, class: "w-full" %>
            </div>
          </div>
          <div class="col-span-full">
            <p class="mt-3 text-sm leading-6 text-gray-600"><%= t("views.jobs.description_full") %></p>
            <div class="mt-2">
              <%= form.rich_text_area :description, class: "block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
        <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
          <%= link_to t("buttons.cancel"), (action_name == 'edit' ? job_path(@job) : jobs_path), class: "text-sm font-semibold leading-6 text-gray-900" %>
          <%= form.submit t("buttons.save"), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
</section>
