<h1>Welcome To Maktabah</h1>

<% if current_user %>
    <h2>In Progress</h2>
    <ul>
        <li>Last Step: <%= link_to @last_step.name, course_step_path(id: @last_step.id, course_id: @last_course.id) %></li>
        <li>Last Course: <%= link_to @last_course.name, course_steps_path(course_id: @last_course.id) %></li>
    </ul>

    <h2>Completed</h2>
    <ul>
        <% @complete_courses.each do |cc| %>
            <% course = Course.find(cc.progressable_id) %>
            <li><%= link_to course.name, course_steps_path(course_id: course.id) %></li>
        <% end %>
    </ul>
<% end %>