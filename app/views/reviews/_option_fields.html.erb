<div class="nested-fields">
  <div class="my-4 sm:col-span-full">
    <%= form.label :name, "Option name", class: "block" %>
    <div class="relative mt-2 rounded-md shadow-sm">
      <%= form.text_field :name, class: "w-full" %>
      <div class="absolute inset-y-0 right-0 flex items-center pr-3">
        <%= link_to "#", data: { action: "click->nested-form#remove_association" } do %>
          <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
  <%= form.hidden_field :_destroy %>
</div>
