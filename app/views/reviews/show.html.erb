<div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1><%= @review.name %></h1>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none flex space-x-2">
      <%= link_to edit_review_path(@review), class: "flex items-center block rounded-md bg-indigo-600 px-5 py-2 text-center text-sm font-semibold text-white shadow-sm hover:text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-1 h-5 w-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
        </svg>
        <%= t("views.reviews.edit_review") %>
      <% end %>
      <%= link_to review_path(@review), data: { turbo_method: :delete, turbo_confirm: t("popups.message_delete") }, class: "flex items-center block rounded-md bg-indigo-600 px-5 py-2 text-center text-sm font-semibold text-white shadow-sm hover:text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        <svg class="mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
        </svg>
        <%= t("buttons.delete") %>
      <% end %>
    </div>
  </div>
  <div class="mt-8 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
    <%= render partial: "questionnaire", locals: {review: @review} %>

    <div class="w-full">
      <%= render partial: "review_attributes", locals: {review: @review} %>

      <%= render partial: "reviewees", locals: {review: @review} %>
    </div>
  </div>
</div>
