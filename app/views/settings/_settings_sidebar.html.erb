        </svg>
        <span class="truncate text-lg"><%= t("views.sites.title_sites") %></span>
      </a>
    </nav>
  </aside>
  <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
  <div class="bg-white shadow rounded-lg dark:bg-gray-800 dark:ring-1 dark:ring-white/10 dark:ring-inset py-8">
    <%=  yield %>
