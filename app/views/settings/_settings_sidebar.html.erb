        <span class="truncate text-lg"><%= t("views.holidays.title_holidays") %></span>
      </a>
      <a class="<%= request.path.include?("sites") ? bold_class : normal_class %>" href="<%= url_for(sites_path) %>">
        <svg class="w-8 h-8 text-gray-500 group-hover:text-gray-700 dark:text-gray-300 dark:group-hover:text-gray-300 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
