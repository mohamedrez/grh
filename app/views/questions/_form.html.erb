<%= form_with(model: [survey, section, question], class: "mt-5 bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid max-w-full grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-full">
        <%= form.label :title, class: "block" %>
        <div class="mt-2">
          <%= form.text_field :title, class: "w-full" %>
          <%= inline_error_for(:title, question).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :response_type, class: "block" %>
        <div class="mt-2">
          <%= form.select :response_type, options_for_select(Question.response_types.map {|key, value| [key.humanize, key]}, question.response_type) %>
          <%= inline_error_for(:response_type, question).html_safe %>
        </div>
      </div>
    </div>
    <div id="options" class="mt-5">
      <h2 class="mb-3 text-base font-semibold leading-7 text-gray-500">Enter the options if the response type is <span class="text-red-500">(Single-select or Multiple-select)*</span></h2>
      <%= form.fields_for :options do |option_form| %>
        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2 p-5">
          <div class="grid max-w-full grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="sm:col-span-full">
              

              <%= option_form.label :name, "Option name", class: "block" %>
              <div class="relative mt-2 rounded-md shadow-sm">
                <%= option_form.text_field :name, class: "w-full" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <%= link_to "" do %>
                    <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="m-2 mt-4">
            <%= link_to "+ Add option", "" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <button data-action="click->right#hide" type="button" class= "text-sm font-semibold leading-6 text-gray-900">
      <%= t("buttons.cancel") %>
    </button>
    <%= form.submit (action_name == 'new' ? t("buttons.add") : t("buttons.edit") ) %>
  </div>
<% end %>
