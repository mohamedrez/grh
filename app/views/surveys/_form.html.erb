<%= form_with(model: survey, class: "mt-5 bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid grid-cols-1 gap-x-8 gap-y-10 pb-10 md:grid-cols-2">
      <div>
        <h2 class="text-base font-semibold leading-7 text-indigo-500">Customize the survey</h2>
      </div>
      <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-full">
          <%= form.label :name, t("attributes.shared.name"), class: "block" %>
          <div class="mt-2">
            <%= form.text_field :name, class: "w-full" %>
            <%= inline_error_for(:name, survey).html_safe %>
          </div>
        </div>

        <%= form.hidden_field :surveyable_type, value: surveyable_type %>
        <%= form.hidden_field :surveyable_id, value: surveyable_id %>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <button data-action="click->right#hide" type="button" class= "text-sm font-semibold leading-6 text-gray-900">
      <%= t("buttons.cancel") %>
    </button>
    <%= form.submit (action_name == 'new' ? t("buttons.add") : t("buttons.edit") ) %>
  </div>
<% end %>
