<div class="px-4 sm:px-6 lg:px-8 mt-10">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1>All the requests</h1>
      </div>
    </div>
    <div class="min-w-full my-8">
      <div data-controller="tabs" data-tabs-active-tab="border-purple-500 text-purple-600 whitespace-nowrap border-b-2">
        <ul class="list-reset flex border-b -mb-px mb-5 mt-2 flex space-x-8">
          <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->tabs#change">
            <a class="border-transparent text-gray-500 hover:border-gray-200 hover:text-gray-700 whitespace-nowrap border-b-2 px-1 text-sm font-medium" href="#"><%= t("views.shared.pending") %></a>
          </li>
          <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change">
            <a class="border-transparent text-gray-500 hover:border-gray-200 hover:text-gray-700 whitespace-nowrap border-b-2 px-1 text-sm font-medium" href="#"><%= t("views.shared.approved") %></a>
          </li>
          <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change">
            <a class="border-transparent text-gray-500 hover:border-gray-200 hover:text-gray-700 whitespace-nowrap border-b-2 px-1 text-sm font-medium" href="#"><%= t("views.shared.rejected") %></a>
          </li>
        </ul>

        <div data-tabs-target="panel">
          <div class="mt-10">
            <%= render partial: 'list_item', locals: {user_requests: @user_requests.pending, from_all_requests: true} %>
          </div>
        </div>

        <div data-tabs-target="panel">
          <div class="mt-10">
            <%= render partial: 'list_item', locals: {user_requests: @user_requests.approved, from_all_requests: true} %>
          </div>
        </div>

        <div data-tabs-target="panel">
          <div class="mt-10">
            <%= render partial: 'list_item', locals: {user_requests: @user_requests.rejected, from_all_requests: true} %>
          </div>
        </div>
      </div>
    </div>
</div>
