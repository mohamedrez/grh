<%= form_with(model: [survey, section], class: "mt-5 bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
  <div class="px-4 py-6 sm:p-8">
    <div class="grid max-w-full grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-full">
        <%= form.label :name, t("attributes.shared.name"), class: "block" %>
        <div class="mt-2">
          <%= form.text_field :name, class: "w-full" %>
          <%= inline_error_for(:name, section).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :description, class: "block" %>
        <div class="mt-2">
          <%= form.text_area :description, class: "px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", rows: 4 %>
          <%= inline_error_for(:description, section).html_safe %>
        </div>
      </div>

      <div class="sm:col-span-full">
        <%= form.label :section_type, class: "block" %>
        <div class="mt-2">
          <%= form.select :section_type, Section.section_types.keys.collect { |section_type| [Section.human_enum_name(:section_type, section_type), section_type] } %>
          <%= inline_error_for(:section_type, section).html_safe %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
    <button data-action="click->right#hide" type="button" class= "text-sm font-semibold leading-6 text-gray-900">
      <%= t("buttons.cancel") %>
    </button>
    <%= form.submit (action_name == 'new' ? t("buttons.add") : t("buttons.edit") ) %>
  </div>
<% end %>
