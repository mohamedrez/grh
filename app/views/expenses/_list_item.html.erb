<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-medium text-gray-900 sm:pl-6"><%= t("attributes.expense.employee") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-900"><%= t("attributes.expense.date") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-900"><%= t("attributes.expense.category") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-900"><%= t("attributes.expense.description") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-900"><%= t("attributes.expense.amount") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-900"></th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6"></th>
            </tr>
          </thead>
          <tbody id="expense-list" class="divide-y divide-gray-200 bg-white">
            <%= render expenses %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
